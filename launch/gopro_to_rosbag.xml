<launch>
  <arg name="gopro_video" default_value="/home/bjoshi/gopro_cave/GX010013.MP4"/>
  <arg name="gopro_folder" default_value="/home/bjoshi/gopro_cave"/>
  <arg name="multiple_files" default_value="false"/>
  <arg name="rosbag" default_value="/home/bjoshi/gopro_cave/GX010013.bag"/>
  <arg name="scale" default_value="0.5"/>
  <arg name="compressed_image_format" default_value="true"/>
  <arg name="grayscale" default_value="true"/>
  <arg name="display_images" default_value="false"/>

  <node pkg="gopro_ros2" exec="gopro_to_rosbag" name="gopro_to_rosbag" output="screen" required="true">
    <param name="gopro_video" value="$(var gopro_video)"/>
    <param name="rosbag" value="$(var rosbag)"/>
    <param name="scale" value="$(var scale)"/>
    <param name="compressed_image_format" value="$(var compressed_image_format)"/>
    <param name="grayscale" value="$(var grayscale)"/>
    <param name="display_images" value="$(var display_images)"/>
    <param name="gopro_folder" value="$(var gopro_folder)"/>
    <param name="multiple_files" value="$(var multiple_files)"/>
  </node>
</launch>
